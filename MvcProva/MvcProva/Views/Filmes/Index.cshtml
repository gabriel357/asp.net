@model IEnumerable<MvcProva.Models.Filme>

@{
    ViewBag.Title = "Filme";
}

<h2>Filmes</h2>

<p>
    @Html.ActionLink("Adicionar novo filme", "create")

    @using (Html.BeginForm())
    {
    <p>
        Genre: @Html.DropDownList("generoFilme", "Todos")
        Título: @Html.TextBox("searchstring") <br />
        <input type="submit" value="Filtrar" />
    </p>
    }
    
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataDeLançamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preco)
        </th>
        <th>
        <th>
            @Html.DisplayNameFor(model => model.Classificacao)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataDeLançamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Preco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Classificacao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.ID }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.ID })
        </td>
        
    </tr>
}

</table>
